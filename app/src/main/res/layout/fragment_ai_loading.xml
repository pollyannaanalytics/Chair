<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".createprofile.AiLoadingFragment">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/ai_loading_animation"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintDimensionRatio="1"
            app:lottie_rawRes="@id/ai_loading_animation"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:id="@+id/loadint_text"
            android:layout_width="0dp"
            android:textColor="@color/shadow"
            android:textStyle="bold"
            android:textSize="@dimen/detail_text_size"
            android:text="chat GPT 正在幫你的煩惱智慧分類，幫你找找同溫層..."
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standard_margin"
            app:layout_constraintTop_toBottomOf="@id/ai_loading_animation"
            app:layout_constraintStart_toStartOf="@id/ai_loading_animation"
            app:layout_constraintEnd_toEndOf="@id/ai_loading_animation"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
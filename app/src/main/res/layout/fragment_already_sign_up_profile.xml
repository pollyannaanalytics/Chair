<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="usermanager"
            type="com.example.reclaim.data.UserManager" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/primary_background"

        tools:context=".profile.AlreadySignUpProfileFragment">
        <androidx.cardview.widget.CardView
            android:id="@+id/self_avator_container"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="250dp"
            android:layout_marginTop="@dimen/standard_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <ImageView
                android:id="@+id/self_avator_img"
                android:layout_width="match_parent"
                imageUri="@{usermanager.userImage}"
                android:layout_height="match_parent"
                />
        </androidx.cardview.widget.CardView>

       <ImageView
           android:layout_width="match_parent"
           android:layout_height="0dp"
           app:layout_constraintHeight_percent="0.5"
           android:src="@drawable/round_backgound"
           app:layout_constraintTop_toTopOf="parent"



           />
        <TextView
            android:id="@+id/self_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/self_avator_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:textSize="@dimen/title_text_size"
            />
        <TextView
            android:id="@+id/self_tag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/shadow"
            android:gravity="center"
            android:textSize="@dimen/detail_text_size"
            app:layout_constraintStart_toStartOf="@id/self_username"
            app:layout_constraintEnd_toEndOf="@id/self_username"
            app:layout_constraintTop_toBottomOf="@id/self_username"
            />
        <TextView
            android:id="@+id/self_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/detail_text_size"
            app:layout_constraintTop_toBottomOf="@id/self_tag"
            app:layout_constraintStart_toStartOf="@id/self_tag"
            app:layout_constraintEnd_toEndOf="@id/self_tag"
            />

        <Button
            android:id="@+id/edit_profile"
            android:text="Edit Profile"
            app:layout_constraintTop_toBottomOf="@id/self_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

       />
        <androidx.cardview.widget.CardView
            android:id="@+id/self_record"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintWidth_percent="0.7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="50dp"

            app:layout_constraintTop_toBottomOf="@id/edit_profile"
            app:layout_constraintBottom_toBottomOf="parent"
            >
           <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"

               android:background="@drawable/round_square"

               >
               <ImageView
                   android:id="@+id/friend_icon"
                   android:src="@drawable/user_add__2_"
                   android:layout_width="0dp"
                   android:layout_height="0dp"
                   app:flow_verticalStyle="spread"
                   android:layout_marginLeft="@dimen/standard_margin"
                   app:layout_constraintDimensionRatio="1:1"
                   app:layout_constraintHorizontal_chainStyle="spread"
                   app:layout_constraintHorizontal_weight="0.1"
                   app:layout_constraintEnd_toStartOf="@id/friend_number_description"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toTopOf="@id/like_icon"
                   />

               <TextView
                   android:id="@+id/friend_number_description"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="@dimen/standard_margin"
                   android:textColor="@color/white"
                   android:textSize="@dimen/detail_text_size"
                   app:layout_constraintBottom_toBottomOf="@id/friend_icon"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintHorizontal_weight="0.5"
                   app:layout_constraintStart_toEndOf="@id/friend_icon"
                   app:layout_constraintTop_toTopOf="@id/friend_icon"
                   app:layout_constraintVertical_bias="0.523" />

               <ImageView
                   android:id="@+id/like_icon"
                   android:layout_width="0dp"
                   android:layout_height="0dp"
                   android:src="@drawable/heart__3_"
                   app:layout_constraintStart_toStartOf="@id/friend_icon"
                   app:layout_constraintEnd_toEndOf="@id/friend_icon"
                   app:layout_constraintDimensionRatio="1:1"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintTop_toBottomOf="@id/friend_icon"
                   />

               <TextView
                   android:id="@+id/like_description"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/white"
                   android:textSize="@dimen/detail_text_size"
                   app:layout_constraintBottom_toBottomOf="@id/like_icon"
                   app:layout_constraintStart_toStartOf="@id/friend_number_description"
                   app:layout_constraintTop_toTopOf="@id/like_icon"
                   app:layout_constraintVertical_bias="0.0" />

           </androidx.constraintlayout.widget.ConstraintLayout>




        </androidx.cardview.widget.CardView>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
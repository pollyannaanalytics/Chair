<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.reclaim.profile.ProfileViewModel" />

    </data>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/user_image"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/ic_launcher_foreground"
                    />


        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/choose_img_content"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <Button
            android:id="@+id/choose_img_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="從相簿請選擇圖片"
            app:layout_constraintStart_toStartOf="@id/choose_img_content"
            app:layout_constraintEnd_toEndOf="@id/choose_img_content"
            app:layout_constraintTop_toBottomOf="@id/choose_img_content"
            />

        <TextView
            android:id="@+id/username_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/choose_img_btn"
            android:textSize="20sp"
            android:text="你的名字"
            app:layout_constraintStart_toStartOf="@id/choose_img_content" />

        <EditText
            android:id="@+id/username_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="請輸入你的名字"
            app:layout_constraintStart_toStartOf="@id/choose_img_content"
            app:layout_constraintEnd_toEndOf="@id/choose_img_content"
            app:layout_constraintTop_toBottomOf="@id/username_title" />

        <TextView
            android:id="@+id/gender_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/username_edit"
            android:textSize="20sp"
            android:text="你的性別"
            app:layout_constraintStart_toStartOf="@id/choose_img_content" />

        <RadioGroup
            android:id="@+id/gender_group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/choose_img_content"
            app:layout_constraintTop_toBottomOf="@id/gender_title"
            >
            <RadioButton
                android:id="@+id/male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男"/>
            <RadioButton
                android:id="@+id/female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女"/>
            <RadioButton
                android:id="@+id/third_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="非二元性別"/>

        </RadioGroup>

        <TextView
            android:id="@+id/worries_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/gender_group"
            android:textSize="20sp"
            android:text="你的煩惱"
            app:layout_constraintStart_toStartOf="@id/choose_img_content" />

        <EditText
            android:id="@+id/worries_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="來聊聊你最近的煩惱吧"
            android:lines="8"
            app:layout_constraintStart_toStartOf="@id/choose_img_content"
            app:layout_constraintEnd_toEndOf="@id/choose_img_content"
            app:layout_constraintTop_toBottomOf="@id/worries_title"
            android:autofillHints=""
            android:inputType="" />

        <Button
            android:id="@+id/submit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="儲存我的資料"
            app:layout_constraintTop_toBottomOf="@id/worries_edit"
            app:layout_constraintStart_toStartOf="@id/choose_img_content"
            app:layout_constraintEnd_toEndOf="@id/choose_img_content" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
</layout>
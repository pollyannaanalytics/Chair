<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.reclaim.match.MatchViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_gold"
        android:alpha="0.9"
        tools:context=".match.MatchFragment">

        <TextView

            android:id="@+id/match_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/self_container"
            android:layout_marginTop="@dimen/standard_margin"
            android:layout_marginBottom="@dimen/standard_margin"
            android:textSize="60dp"
            android:text="It's a Match"
            android:gravity="center"

            android:textStyle="bold"
            android:textColor="@color/white"
            android:src="@drawable/match_primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/self_container"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="250dp"
            android:layout_marginTop="@dimen/standard_margin"
            app:layout_constraintBottom_toTopOf="@id/match_description"
            app:layout_constraintTop_toBottomOf="@id/match_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/other_container">

            <ImageView
                android:id="@+id/self_img"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                imageUri="@{viewModel.chatRoomInfo.userAImg}" />

        </androidx.cardview.widget.CardView>
        <View
            android:id="@+id/center_line"
            app:layout_constraintStart_toEndOf="@id/self_container"
            app:layout_constraintEnd_toStartOf="@id/other_container"
            app:layout_constraintTop_toTopOf="@id/self_container"
            app:layout_constraintBottom_toBottomOf="@id/self_container"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/other_container"
            app:layout_constraintTop_toTopOf="@+id/self_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="250dp"
            app:layout_constraintStart_toEndOf="@id/self_container"
            android:layout_width="100dp"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/other_img"
                android:scaleType="centerCrop"
                imageUri="@{viewModel.chatRoomInfo.userBImg}"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/match_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standard_margin"
            android:text="你們互相 Like 彼此!"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/go_to_chat"
            app:layout_constraintTop_toBottomOf="@id/self_container"

            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/message_input_container"
            app:layout_constraintStart_toStartOf="@id/self_container"
            app:layout_constraintEnd_toStartOf="@id/go_to_chat"
            app:layout_constraintTop_toTopOf="@id/go_to_chat"
            app:layout_constraintBottom_toBottomOf="@id/go_to_chat"
            android:layout_width="0dp"
            android:layout_height="0dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/message_input_edit"
                android:hint="跟對方打聲招呼吧!"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/go_to_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/match_description"
            android:layout_marginLeft="@dimen/standard_margin_one_forth"
            android:text="傳送"
            app:layout_constraintStart_toEndOf="@id/message_input_container"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/other_container"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
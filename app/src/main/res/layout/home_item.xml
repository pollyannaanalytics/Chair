<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="25dp"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/users_first_img"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/worry_type_container"

                    app:cardCornerRadius="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    app:layout_constraintStart_toStartOf="@id/user_name_title"
                    app:layout_constraintBottom_toTopOf="@id/user_tag"
                    >
                <TextView
                    android:id="@+id/worry_type"

                    android:text="Work"
                    android:textColor="@color/white"
                    android:background="@color/shadow"
                   android:paddingVertical="@dimen/standard_margin_one_forth"
                    android:paddingHorizontal="@dimen/standard_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/same_type_container"
                    app:cardCornerRadius="15dp"
                    android:layout_marginLeft="@dimen/standard_margin_one_forth"
                    app:layout_constraintTop_toTopOf="@id/worry_type_container"
                    app:layout_constraintBottom_toBottomOf="@id/worry_type_container"
                    app:layout_constraintStart_toEndOf="@id/worry_type_container"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/same_type_tag"
                        android:text="相似煩惱"
                        android:textColor="@color/white"

                        android:padding="@dimen/standard_margin_one_forth"
                        android:background="@drawable/gradient_gold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/user_name_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="User"
                    android:textColor="@color/white"
                    android:textSize="40dp"
                    app:layout_constraintBottom_toTopOf="@id/worry_type_container"
                    android:layout_marginLeft="@dimen/standard_margin"
                    android:layout_marginBottom="@dimen/standard_margin_one_forth"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    />
                <TextView
                    android:id="@+id/user_tag"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/detail_text_size"
                    app:layout_constraintBottom_toTopOf="@id/worries_description"
                    android:layout_marginLeft="@dimen/standard_margin"
                    android:layout_marginVertical="@dimen/standard_margin_one_forth"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/user_name_title"/>

                <TextView
                    android:id="@+id/worries_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="gender"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_marginBottom="@dimen/standard_margin"
                    app:layout_constraintBottom_toTopOf="@id/dislike_btn"
                    app:layout_constraintStart_toStartOf="@id/user_name_title"

                     />
                <ImageView
                    android:id="@+id/dislike_btn"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintWidth_percent="0.20"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/like_btn"
                    android:layout_marginBottom="@dimen/standard_margin"
                    android:src="@drawable/cancel"/>
                <ImageView
                    android:id="@+id/like_btn"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintWidth_percent="0.20"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/dislike_btn"
                    android:layout_marginBottom="@dimen/standard_margin"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/heart_like"

                    />









            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </FrameLayout>
</layout>

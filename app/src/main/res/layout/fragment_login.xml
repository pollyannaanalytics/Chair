<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="usermanager"
            type="com.example.reclaim.data.UserManager" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/standard_margin"
        android:padding="@dimen/standard_margin"
        tools:context=".login.LoginFragment">
        <ImageView
            android:id="@+id/login_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.15"
            app:layout_constraintDimensionRatio="1"
            android:src="@drawable/setting_svgrepo_com"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

        <TextView
            android:id="@+id/welcome_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/login_title"
            android:fontFamily="@font/noto_sans"
            android:text="歡迎使用 Reclaim"
            android:textColor="@color/myPrimary"
            android:textStyle="bold"
            android:textSize="@dimen/title_text_size"

            app:layout_constraintTop_toBottomOf="@id/login_title"
            />
        <TextView
            android:id="@+id/welcome_hint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="請遵守以下規則"
            app:layout_constraintStart_toStartOf="@id/login_title"
            app:layout_constraintTop_toBottomOf="@id/welcome_title"
            android:textSize="@dimen/detail_text_size"
            android:fontFamily="@font/noto_sans"
            />

        <TextView
            android:id="@+id/rule_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="忠於自我"
            android:textStyle="bold"
            android:textColor="@color/myPrimary"
            android:textSize="18sp"
            android:layout_marginTop="@dimen/standard_margin"
            app:layout_constraintTop_toBottomOf="@id/welcome_hint"
            app:layout_constraintStart_toStartOf="@id/welcome_hint"
            />
        <TextView
            android:id="@+id/rule_1_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/rule_1"
            android:text="請確認你的圖片、自介與現實相符"
            app:layout_constraintTop_toBottomOf="@id/rule_1"
            />

        <TextView
            android:id="@+id/rule_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="待人有禮"
            android:textStyle="bold"
            android:textColor="@color/myPrimary"
            android:textSize="18sp"
            android:layout_marginTop="@dimen/standard_margin"
            app:layout_constraintTop_toBottomOf="@id/rule_1_description"
            app:layout_constraintStart_toStartOf="@id/rule_1_description"
            />
        <TextView
            android:id="@+id/rule_2_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/rule_2"
            android:text="尊重他人，將心比心對待所有人"
            app:layout_constraintTop_toBottomOf="@id/rule_2"
            />

        <TextView
            android:id="@+id/rule_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="正視自己的苦處"
            android:textStyle="bold"
            android:textColor="@color/myPrimary"
            android:textSize="18sp"
            android:layout_marginTop="@dimen/standard_margin"
            app:layout_constraintTop_toBottomOf="@id/rule_2_description"
            app:layout_constraintStart_toStartOf="@id/rule_2_description"
            />
        <TextView
            android:id="@+id/rule_3_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/rule_3"
            android:text="難過是正常的情緒，也可以帶領你走向接納你的人群"
            app:layout_constraintTop_toBottomOf="@id/rule_3"
            />

        <Button
            android:id="@+id/agree_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/stroke_shape"
            android:text="我同意"
            android:textSize="@dimen/detail_text_size"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
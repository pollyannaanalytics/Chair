<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="usermanager"
            type="com.example.reclaim.data.UserManager" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".login.LoginFragment">
        <ImageView
            android:id="@+id/background_image_avatar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/avatar_background"
            app:layout_constraintWidth_percent="0.45"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintStart_toStartOf="@id/user_image_container"
            app:layout_constraintEnd_toEndOf="@id/user_image_container"
            app:layout_constraintTop_toTopOf="@id/user_image_container"
            app:layout_constraintBottom_toBottomOf="@id/user_image_container"

            />
        <androidx.cardview.widget.CardView
            android:id="@+id/user_image_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.4"
            app:layout_constraintDimensionRatio="1"
            app:cardCornerRadius="250dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/login_hint"
            >

            <ImageView
                imageUri="@{usermanager.userImage}"

                android:src="@mipmap/ic_launcher"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/login_hint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/myPrimary"
            android:textSize="20dp"
            android:layout_marginTop="@dimen/standard_margin"
            app:layout_constraintTop_toBottomOf="@id/user_image_container"
            android:gravity="center"

            android:text="@{`你之前曾以 `+ usermanager.userName + ` 的方式登入`}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/continue_btn"
            />
        <Button
            android:id="@+id/continue_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standard_margin"
            android:background="@drawable/stroke_shape"
            app:layout_constraintTop_toBottomOf="@id/login_hint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"
            android:textStyle="bold"
            android:text="繼續"/>
        <TextView
            android:id="@+id/login_another_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不是你嗎?"

            android:textColor="#cccccC"
            app:layout_constraintTop_toBottomOf="@id/continue_btn"
            app:layout_constraintStart_toStartOf="@id/continue_btn"
            app:layout_constraintEnd_toEndOf="@id/continue_btn"
            android:layout_marginTop="@dimen/standard_margin_half"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>